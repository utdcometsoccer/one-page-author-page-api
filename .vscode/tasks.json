{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "clean (functions)",
			"command": "dotnet",
			"args": [
				"clean",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/function-app"
			}
		},
		{
			"label": "build (functions)",
			"command": "dotnet",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"dependsOn": "clean (functions)",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/function-app"
			}
		},
		{
			"label": "clean release (functions)",
			"command": "dotnet",
			"args": [
				"clean",
				"--configuration",
				"Release",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/function-app"
			}
		},
		{
			"label": "publish (functions)",
			"command": "dotnet",
			"args": [
				"publish",
				"--configuration",
				"Release",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"dependsOn": "clean release (functions)",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/function-app"
			}
		},
		{
			"type": "func",
			"dependsOn": "build (functions)",
			"options": {
				"cwd": "${workspaceFolder}/function-app/bin/Debug/net9.0"
			},
			"command": "host start",
			"isBackground": true,
			"problemMatcher": "$func-dotnet-watch"
		},
		{
			"label": "build-imageapi",
			"command": "dotnet",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"group": "build",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/ImageAPI"
			}
		},
		{
			"label": "build-inkstainedwretchfunctions",
			"command": "dotnet",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"group": "build",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/InkStainedWretchFunctions"
			}
		},
		{
			"label": "build-inkstainedwretchstripe",
			"command": "dotnet",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
			"group": "build",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/InkStainedWretchStripe"
			}
		},
		{
			"label": "build-all-apis",
			"dependsOrder": "parallel",
			"dependsOn": [
				"build-imageapi",
				"build-inkstainedwretchfunctions",
				"build-inkstainedwretchstripe"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "shell",
			"label": "func-imageapi",
			"dependsOn": "build-imageapi",
			"command": "func",
			"args": ["host", "start"],
			"options": {
				"cwd": "${workspaceFolder}/ImageAPI"
			},
			"isBackground": true,
			"problemMatcher": "$func-dotnet-watch"
		},
		{
			"type": "shell",
			"label": "func-inkstainedwretchfunctions",
			"dependsOn": "build-inkstainedwretchfunctions",
			"command": "func",
			"args": ["host", "start"],
			"options": {
				"cwd": "${workspaceFolder}/InkStainedWretchFunctions"
			},
			"isBackground": true,
			"problemMatcher": "$func-dotnet-watch"
		},
		{
			"type": "shell",
			"label": "func-inkstainedwretchstripe",
			"dependsOn": "build-inkstainedwretchstripe",
			"command": "func",
			"args": ["host", "start"],
			"options": {
				"cwd": "${workspaceFolder}/InkStainedWretchStripe"
			},
			"isBackground": true,
			"problemMatcher": "$func-dotnet-watch"
		},
		{
			"label": "build-sln",
			"type": "shell",
			"command": "dotnet build \"${workspaceFolder}\\OnePageAuthorAPI.sln\" -nologo",
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "run-tests",
			"type": "shell",
			"command": "dotnet test \"${workspaceFolder}\\OnePageAuthorAPI.sln\" -nologo --no-build",
			"problemMatcher": [
				"$msCompile"
			],
			"group": "test",
			"dependsOn": "build-sln"
		}
	]
}