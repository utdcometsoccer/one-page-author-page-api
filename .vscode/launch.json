{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to .NET Functions",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:azureFunctions.pickProcess}"
        },
        {
            "name": "Debug ImageAPI",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func-imageapi",
            "processId": "${command:azureFunctions.pickProcess}"
        },
        {
            "name": "Debug InkStainedWretchFunctions", 
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func-inkstainedwretchfunctions",
            "processId": "${command:azureFunctions.pickProcess}"
        },
        {
            "name": "Debug InkStainedWretchStripe",
            "type": "coreclr",
            "request": "attach", 
            "preLaunchTask": "func-inkstainedwretchstripe",
            "processId": "${command:azureFunctions.pickProcess}"
        },
        {
            "name": "Attach by Process ID",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": false,
            "suppressJITOptimizations": true
        },
        {
            "name": "Debug Amazon Product Console",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/AmazonProductTestConsole/bin/Debug/net9.0/AmazonProductTestConsole.dll",
            "args": ["--config", "Stephen King"],
            "cwd": "${workspaceFolder}/AmazonProductTestConsole",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "preLaunchTask": "build-amazon-console"
        },
        {
            "name": "Launch Azure Storage Emulator",
            "type": "node",
            "request": "launch",
            "program": "azurite",
            "args": [
                "--silent",
                "--location", "${workspaceFolder}/.azurite",
                "--debug", "${workspaceFolder}/.azurite/debug.log"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "presentation": {
                "hidden": false,
                "group": "Storage",
                "order": 1
            },
            "stopOnEntry": false
        },
        {
            "name": "Debug ImageAPI (Production)",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func-imageapi",
            "processId": "${command:azureFunctions.pickProcess}",
            "env": {
                "TESTING_MODE": "true",
                "MOCK_AZURE_INFRASTRUCTURE": "false",
                "MOCK_STRIPE_PAYMENTS": "false",
                "STRIPE_TEST_MODE": "false",
                "TEST_SCENARIO": "production-test",
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "logging": {
                "moduleLoad": false
            },
            "justMyCode": false,
            "suppressJITOptimizations": true,
            "presentation": {
                "hidden": false,
                "group": "Production Testing",
                "order": 1
            }
        },
        {
            "name": "Debug InkStainedWretchFunctions (Production)",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func-inkstainedwretchfunctions",
            "processId": "${command:azureFunctions.pickProcess}",
            "env": {
                "TESTING_MODE": "true",
                "MOCK_AZURE_INFRASTRUCTURE": "false",
                "MOCK_GOOGLE_DOMAINS": "false",
                "MOCK_EXTERNAL_APIS": "false",
                "SKIP_DOMAIN_PURCHASE": "false",
                "TEST_SCENARIO": "production-test",
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "logging": {
                "moduleLoad": false
            },
            "justMyCode": false,
            "suppressJITOptimizations": true,
            "presentation": {
                "hidden": false,
                "group": "Production Testing",
                "order": 2
            }
        },
        {
            "name": "Debug InkStainedWretchStripe (Production)",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func-inkstainedwretchstripe",
            "processId": "${command:azureFunctions.pickProcess}",
            "env": {
                "TESTING_MODE": "true",
                "MOCK_STRIPE_PAYMENTS": "false",
                "STRIPE_TEST_MODE": "false",
                "MAX_TEST_COST_LIMIT": "50.00",
                "TEST_SCENARIO": "production-test",
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "logging": {
                "moduleLoad": false
            },
            "justMyCode": false,
            "suppressJITOptimizations": true,
            "presentation": {
                "hidden": false,
                "group": "Production Testing",
                "order": 3
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch All APIs",
            "configurations": [
                "Debug ImageAPI",
                "Debug InkStainedWretchFunctions", 
                "Debug InkStainedWretchStripe"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "All Services",
                "order": 1
            }
        },
        {
            "name": "Launch All Services (with Storage)",
            "configurations": [
                "Launch Azure Storage Emulator",
                "Debug ImageAPI",
                "Debug InkStainedWretchFunctions", 
                "Debug InkStainedWretchStripe"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "All Services",
                "order": 2
            }
        },
        {
            "name": "⚠️ Production Testing (Scenario 3) - REAL MONEY",
            "configurations": [
                "Debug ImageAPI (Production)",
                "Debug InkStainedWretchFunctions (Production)",
                "Debug InkStainedWretchStripe (Production)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Production Testing",
                "order": 1
            }
        }
    ]
}