{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GoogleDomainRegistrationTest",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-google-domain-registration-test",
            "program": "${workspaceFolder}/GoogleDomainRegistrationTest/bin/Debug/net10.0/GoogleDomainRegistrationTest.dll",
            "args": [
                "--register",
                "--confirm",
                "--confirm-domain",
                "gcptest001.com"
            ],
            "cwd": "${workspaceFolder}/GoogleDomainRegistrationTest",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "GOOGLE_CLOUD_PROJECT_ID": "${env:GOOGLE_CLOUD_PROJECT_ID}",
                "GOOGLE_DOMAINS_LOCATION": "${env:GOOGLE_DOMAINS_LOCATION}",
                "COSMOSDB_ENDPOINT_URI": "${env:COSMOSDB_ENDPOINT_URI}",
                "COSMOSDB_PRIMARY_KEY": "${env:COSMOSDB_PRIMARY_KEY}",
                "COSMOSDB_DATABASE_ID": "${env:COSMOSDB_DATABASE_ID}",
                "GOOGLE_APPLICATION_CREDENTIALS": "${env:GOOGLE_APPLICATION_CREDENTIALS}",
                "SKIP_GOOGLE_ADC_VALIDATION": "${env:SKIP_GOOGLE_ADC_VALIDATION}"
            }
        },
        {
            "name": "Attach to .NET Functions",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:azureFunctions.pickProcess}"
        },
        {
            "name": "Debug ImageAPI",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func-imageapi",
            "processId": "${command:azureFunctions.pickProcess}"
        },
        {
            "name": "Debug InkStainedWretchFunctions", 
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func-inkstainedwretchfunctions",
            "processId": "${command:azureFunctions.pickProcess}"
        },
        {
            "name": "Debug InkStainedWretchStripe",
            "type": "coreclr",
            "request": "attach", 
            "preLaunchTask": "func-inkstainedwretchstripe",
            "processId": "${command:azureFunctions.pickProcess}"
        },
        {
            "name": "Attach by Process ID",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": false,
            "suppressJITOptimizations": true
        },
        {
            "name": "Debug Amazon Product Console",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/AmazonProductTestConsole/bin/Debug/net9.0/AmazonProductTestConsole.dll",
            "args": ["--config", "Stephen King"],
            "cwd": "${workspaceFolder}/AmazonProductTestConsole",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "preLaunchTask": "build-amazon-console"
        },
        {
            "name": "Launch Azure Storage Emulator",
            "type": "node",
            "request": "launch",
            "program": "azurite",
            "args": [
                "--silent",
                "--location", "${workspaceFolder}/.azurite",
                "--debug", "${workspaceFolder}/.azurite/debug.log"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "presentation": {
                "hidden": false,
                "group": "Storage",
                "order": 1
            },
            "stopOnEntry": false
        },
        {
            "name": "Debug ImageAPI (Production)",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func-imageapi",
            "processId": "${command:azureFunctions.pickProcess}",
            "logging": {
                "moduleLoad": false
            },
            "justMyCode": false,
            "suppressJITOptimizations": true,
            "presentation": {
                "hidden": false,
                "group": "Production Testing",
                "order": 1
            }
        },
        {
            "name": "Debug InkStainedWretchFunctions (Production)",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func-inkstainedwretchfunctions",
            "processId": "${command:azureFunctions.pickProcess}",
            "logging": {
                "moduleLoad": false
            },
            "justMyCode": false,
            "suppressJITOptimizations": true,
            "presentation": {
                "hidden": false,
                "group": "Production Testing",
                "order": 2
            }
        },
        {
            "name": "Debug InkStainedWretchStripe (Production)",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "func-inkstainedwretchstripe",
            "processId": "${command:azureFunctions.pickProcess}",
            "logging": {
                "moduleLoad": false
            },
            "justMyCode": false,
            "suppressJITOptimizations": true,
            "presentation": {
                "hidden": false,
                "group": "Production Testing",
                "order": 3
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch All APIs",
            "configurations": [
                "Debug ImageAPI",
                "Debug InkStainedWretchFunctions", 
                "Debug InkStainedWretchStripe"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "All Services",
                "order": 1
            }
        },
        {
            "name": "Launch All Services (with Storage)",
            "configurations": [
                "Launch Azure Storage Emulator",
                "Debug ImageAPI",
                "Debug InkStainedWretchFunctions", 
                "Debug InkStainedWretchStripe"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "All Services",
                "order": 2
            }
        },
        {
            "name": "⚠️ Production Testing (Scenario 3) - REAL MONEY",
            "configurations": [
                "Debug ImageAPI (Production)",
                "Debug InkStainedWretchFunctions (Production)",
                "Debug InkStainedWretchStripe (Production)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Production Testing",
                "order": 1
            }
        }
    ]
}